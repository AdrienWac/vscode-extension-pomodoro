{
  "name": "pomodorotimer",
  "displayName": "PomodoroTimer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pomodorotimer.open",
		"onCommand:pomodorotimer.close",
		"onCommand:pomodorotimer.start",
		"onCommand:pomodorotimer.stop"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pomodorotimer.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "pomodorotimer.open",
        "title": "Open timer webview"
      },
      {
        "command": "pomodorotimer.close",
        "title": "Close timer webview. If a timer is started, it will be stopped."
      },
      {
        "command": "pomodorotimer.start",
        "title": "Start timer."
      },
      {
        "command": "pomodorotimer.stop",
        "title": "Stop timer."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  }
}
