{
	"name": "vscode-extension-pomodoro",
	"displayName": "PomodoroTimer",
	"description": "PomodoroTimer is a customizable pomodoro timer",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-extension-pomodoro.open",
		"onCommand:vscode-extension-pomodoro.close",
		"onCommand:vscode-extension-pomodoro.start",
		"onCommand:vscode-extension-pomodoro.stop"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-extension-pomodoro.open",
				"title": "Open PomodoroTimer view"
			},
			{
				"command": "vscode-extension-pomodoro.close",
				"title": "Close current PomodoroTimer view"
			},
			{
				"command": "vscode-extension-pomodoro.start",
				"title": "Start PomodoroTimer"
			},
			{
				"command": "vscode-extension-pomodoro.stop",
				"title": "Stop PomodoroTimer"
			}
		],
		"configuration": {
			"type": "object",
			"title": "PomodoroTimer",
			"properties": {
				"pomodoroTimer.work.duration": {
					"type": "number",
					"default": 25,
					"description": "Duration of a pomodoro"
				},
				"pomodoroTimer.shortBreak.duration": {
					"type": "number",
					"default": 5,
					"description": "Duration of a short break between pomodoros"
				},
				"pomodoroTimer.longBreak.duration": {
					"type": "number",
					"default": 15,
					"description": "Duration of break after pomodoro cycle"
				},
				"pomodoroTimer.work.color": {
					"type": "string",
					"default": "d35d6e",
					"description": "Main color of a pomodoro timer"
				},
				"pomodoroTimer.shortBreak.color": {
					"type": "string",
					"default": "9dbeb9",
					"description": "Main color of a short break timer"
				},
				"pomodoroTimer.longBreak.color": {
					"type": "string",
					"default": "5aa469",
					"description": "Duration of long break timer"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
